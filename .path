#!/usr/bin/env bash

# Add `Homebrew` binaries to the PATH
export PATH="$(brew --prefix)/bin:$PATH"
export PATH="$(brew --prefix)/sbin:$PATH"

# Golang
export GOROOT=$(brew --prefix)/opt/go/libexec
export GOPATH=$HOME/projects/go
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOPATH
export PATH=$PATH:$GOROOT/bin
export PATH=$PATH:$GOBIN

# Python 3.8
export PATH="$(brew --prefix)/opt/python@3.8/libexec/bin:$PATH"

# ruby 2.7
export PATH="$(brew --prefix)/opt/ruby/libexec/bin:$PATH"
export PATH="$(brew --prefix)/lib/ruby/gems/bin:$PATH"

# cURL
export PATH="$(brew --prefix)/opt/curl/bin:$PATH"

# Update path for gnu find, coreutils, make & sed on darwin
export PATH="$(brew --prefix)/opt/coreutils/libexec/gnubin:$PATH"
export PATH="$(brew --prefix)/opt/findutils/libexec/gnubin:$PATH"
export PATH="$(brew --prefix)/opt/make/libexec/gnubin:$PATH"
export PATH="$(brew --prefix)/opt/gnu-sed/libexec/gnubin:$PATH"

export MANPATH=$"(brew --prefix)/opt/coreutils/libexec/gnuman:$MANPATH"
export MANPATH=$"(brew --prefix)/opt/findutils/libexec/gnuman:$MANPATH"
export MANPATH=$"(brew --prefix)/opt/make/libexec/gnuman:$MANPATH"
export MANPATH=$"(brew --prefix)/opt/gnu-sed/libexec/gnuman:$MANPATH"
